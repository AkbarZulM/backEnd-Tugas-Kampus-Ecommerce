# Server
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
API_PREFIX=/api/v1

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# Redis
REDIS_URL="redis://localhost:6379"

# Payment Gateways
SHOPEEPAY_API_KEY=your_shopee_pay_api_key
SHOPEEPAY_SECRET_KEY=your_shopee_pay_secret_key
SHOPEEPAY_MERCHANT_ID=your_merchant_id

GOPAY_API_KEY=your_gopay_api_key
GOPAY_SECRET_KEY=your_gopay_secret_key

OVO_API_KEY=your_gopay_api_key
OVO_SECRET_KEY=your_gopay_secret_key

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880 # 5MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@foodorder.com

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# App
APP_NAME="Food Order System"
APP_VERSION=1.0.0


Flow

Customer → Pilih Produk → Checkout → Bayar → Admin Proses → Kirim/Deliver